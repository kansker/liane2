<?xml version="1.0" encoding="big5"?>
<root>
  <dao name="AddParameters">
    <statement>insert into parameters(keyId,keyName,value) values(?,?,?)</statement>
    <parameter type="String">keyId</parameter>
    <parameter type="String">keyName</parameter>
    <parameter type="int">value</parameter>
  </dao>
  <dao name="UpdateParameters">
    <statement>update parameters set keyName=?,value=? where keyId=?</statement>
    <parameter type="String">keyName</parameter>
    <parameter type="int">value</parameter>
    <parameter type="String">keyId</parameter>
  </dao>
  <dao name="QueryAllParameters">
    <statement>select * from parameters</statement>
  </dao>
  <dao name="StartParameters">
    <statement>update parameters set value=1 where keyId=?</statement>
    <parameter type="String">keyId</parameter>
  </dao>
  <dao name="StopParameters">
    <statement>update parameters set value=0 where keyId=?</statement>
    <parameter type="String">keyId</parameter>
  </dao>
</root>

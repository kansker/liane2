	<dao name="QueryAllOrderKinds2">
		<statement>select a.* from orderkinds a
			inner join productcgy2 b on b.seq = a.productKind and b.status = 1
			inner join productcgy1 c on c.seq = b.cgy1Seq and c.status = 1
			inner join productcgy d on
			d.seq = c.cgySeq and d.status = 1
			where a.status=1 order by a.name
		</statement>
	</dao>

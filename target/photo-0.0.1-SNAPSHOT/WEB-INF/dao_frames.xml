<?xml version="1.0" encoding="big5"?>
<root>
	<dao name="AddFcgy">
		<statement>insert into frames_cgy(seq,cgyName,status,viewOrder) values(?,?,?,?)</statement>
		<parameter type="int">seq</parameter>
		<parameter type="String">cgyName</parameter>
		<parameter type="short">status</parameter>
		<parameter type="int">viewOrder</parameter>
	</dao>
	<dao name="UpdateFcgy">
		<statement>update frames_cgy set cgyName=?,status=?,viewOrder=? where seq=?</statement>
		<parameter type="String">cgyName</parameter>
		<parameter type="short">status</parameter>
		<parameter type="int">viewOrder</parameter>
		<parameter type="int">seq</parameter>
	</dao>
	<dao name="QueryAllFcgy">
		<statement>select * from frames_cgy</statement>
	</dao>
	<dao name="DeleteFcgy">
		<statement>delete from frames_cgy where seq=?</statement>
		<parameter type="int">seq</parameter>
	</dao>
	<dao name="AddFrames">
		<statement>insert into
			frames(seq,name,cgySeq,preview1,preview2,preview3,fmd1,fmd2,title,status,viewOrder,canvas1,canvas2,canvas3) values(?,?,?,?,?,?,?,?,?,?,?,?,?,?)</statement>
		<parameter type="int">seq</parameter>
		<parameter type="String">name</parameter>
		<parameter type="int">cgySeq</parameter>
		<parameter type="String">preview1</parameter>
		<parameter type="String">preview2</parameter>
		<parameter type="String">preview3</parameter>
		<parameter type="String">fmd1</parameter>
		<parameter type="String">fmd2</parameter>
		<parameter type="String">title</parameter>
		<parameter type="int">status</parameter>
		<parameter type="int">viewOrder</parameter>
		<parameter type="String">canvas1</parameter>
		<parameter type="String">canvas2</parameter>
		<parameter type="String">canvas3</parameter>
	</dao>
	<dao name="UpdateFrames">
		<statement>update frames set
			name=?,cgySeq=?,preview1=?,preview2=?,preview3=?,fmd1=?,fmd2=?,title=?,status=?,viewOrder=?,canvas1=?,canvas2=?,canvas3=?
			where seq=?</statement>
		<parameter type="String">name</parameter>
		<parameter type="int">cgySeq</parameter>
		<parameter type="String">preview1</parameter>
		<parameter type="String">preview2</parameter>
		<parameter type="String">preview3</parameter>
		<parameter type="String">fmd1</parameter>
		<parameter type="String">fmd2</parameter>
		<parameter type="String">title</parameter>
		<parameter type="int">status</parameter>
		<parameter type="int">viewOrder</parameter>
		<parameter type="String">canvas1</parameter>
		<parameter type="String">canvas2</parameter>
		<parameter type="String">canvas3</parameter>
		<parameter type="int">seq</parameter>
	</dao>
	<dao name="StartFrames">
		<statement>update frames set status=1
			where seq=?</statement>
		<parameter type="int">seq</parameter>
	</dao>
	<dao name="StopFrames">
		<statement>update frames set status=0
			where seq=?</statement>
		<parameter type="int">seq</parameter>
	</dao>
	<dao name="QueryAllFrames">
		<statement>select * from frames where 1=1</statement>
		 <parameter condition="cgySeq = ?" kind="2" type="int">cgySeq</parameter>
	</dao>
	<dao name="QueryFrames">
		<statement>select * from frames where seq=?</statement>
		<parameter type="int">seq</parameter>
	</dao>
	<dao name="DeleteFrames">
		<statement>delete from frames where seq=?</statement>
		<parameter type="int">seq</parameter>
	</dao>
</root>

<?xml version="1.0" encoding="big5"?>
<root>
	<dao name="AddAdminUser">
		<statement>
			insert into
			adminuser(userId,userPwd,userName,email,roles,status,registerDate,lastvisitDate)
			values(?,?,?,?,?,?,?,?)
		</statement>
		<parameter type="String">userId</parameter>
		<parameter type="String">userPwd</parameter>
		<parameter type="String">userName</parameter>
		<parameter type="String">email</parameter>
		<parameter type="int">roles</parameter>
		<parameter type="int">status</parameter>
		<parameter type="timestamp">now()</parameter>
		<parameter type="timestamp">now()</parameter>
	</dao>
	<dao name="UpdateAdminUser">
		<statement>
			update adminuser set
			userId=?,userPwd=?,userName=?,email=?,roles=?,status=? where
			seq=?
		</statement>
		<parameter type="String">userId</parameter>
		<parameter type="String">userPwd</parameter>
		<parameter type="String">userName</parameter>
		<parameter type="String">email</parameter>
		<parameter type="int">roles</parameter>
		<parameter type="int">status</parameter>
		<parameter type="long">seq</parameter>
	</dao>
	<dao name="UpdateAdminUser2">
		<statement>
			update adminuser set
			userId=?,userPwd=?,userName=?,email=?,roles=?,status=? where
			seq=?
		</statement>
		<parameter type="String">userId</parameter>
		<parameter type="String">userPwd</parameter>
		<parameter type="String">userName</parameter>
		<parameter type="String">email</parameter>
		<parameter type="int">roles</parameter>
		<parameter type="int">status</parameter>
		<parameter type="long">adminSeq</parameter>
	</dao>
	<dao name="UpdateVisit">
		<statement>
			update adminuser set lastvisitDate=? where seq=?
		</statement>
		<parameter type="timestamp">now()</parameter>
		<parameter type="long">seq</parameter>
	</dao>
	<dao name="AdminLogin">
		<statement>
			select * from adminuser where userId=? and userPwd=? and
			status = 1
		</statement>
		<parameter type="String">userId</parameter>
		<parameter type="String">userPwd</parameter>
	</dao>
	<dao name="DeleteAdminUser">
		<statement>delete from adminuser where seq=?</statement>
		<parameter type="long">seq</parameter>
	</dao>
	<dao name="QueryAllAdminUser">
		<statement>select * from adminuser</statement>
	</dao>
	<dao name="QueryAdminUserByUserId">
		<statement>select * from adminuser where userId=?</statement>
		<parameter type="String">userId</parameter>
	</dao>
	<dao name="AddSeller">
		<statement>
			insert into
			seller(GPID,passCode,pageNum,pageSize,adminSeq,createDate,updateDate,
			status,uploadPic,register,autoOrder,confirmStatus,payMsgStatus,logo,clogo,describes,cdescribes,
			autoAuth,sellAuth,payMethod,freight,cstyleSeq,styleSeq,special,topLogo)
			values(?,?,?,?,?,?,?,?,?,?,?,?,?,?,?,?,?,?,?,?,?,?,?,?,?)
		</statement>
		<parameter type="String">GPID</parameter>
		<parameter type="String">passCode</parameter>
		<parameter type="int">pageNum</parameter>
		<parameter type="String">pageSize</parameter>
		<parameter type="int">adminSeq</parameter>
		<parameter type="Timestamp">now()</parameter>
		<parameter type="Timestamp">now()</parameter>
		<parameter type="short">status</parameter>
		<parameter type="short">uploadPic</parameter>
		<parameter type="short">register</parameter>
		<parameter type="short">autoOrder</parameter>
		<parameter type="short">confirmStatus</parameter>
		<parameter type="short">payMsgStatus</parameter>
		<parameter type="String">logo</parameter>
		<parameter type="String">clogo</parameter>
		<parameter type="String">describes</parameter>
		<parameter type="String">cdescribes</parameter>
		<parameter type="short">autoAuth</parameter>
		<parameter type="short">sellAuth</parameter>
		<parameter type="short">payMethod</parameter>
		<parameter type="int">freight</parameter>
		<parameter type="int">cstyleSeq</parameter>
		<parameter type="int">styleSeq</parameter>
		<parameter type="short">special</parameter>
		<parameter type="String">topLogo</parameter>
	</dao>
	<dao name="DeleteSeller">
		<statement>delete from seller where seq=?</statement>
		<parameter type="int">seq</parameter>
	</dao>
	<dao name="UpdateSeller">
		<statement>
			update seller set
			GPID=?,passCode=?,pageNum=?,pageSize=?,adminSeq=?,updateDate=?,status=?,
			uploadPic=?,register=?,autoOrder=?,confirmStatus=?,payMsgStatus=?,logo=?,clogo=?,describes=?,cdescribes=?,
			autoAuth=?,sellAuth=?,payMethod=?,freight=?,cstyleSeq=?,styleSeq=?,special=?,topLogo=?
			where seq=?
		</statement>
		<parameter type="String">GPID</parameter>
		<parameter type="String">passCode</parameter>
		<parameter type="int">pageNum</parameter>
		<parameter type="String">pageSize</parameter>
		<parameter type="int">adminSeq</parameter>
		<parameter type="Timestamp">now()</parameter>
		<parameter type="short">status</parameter>
		<parameter type="short">uploadPic</parameter>
		<parameter type="short">register</parameter>
		<parameter type="short">autoOrder</parameter>
		<parameter type="short">confirmStatus</parameter>
		<parameter type="short">payMsgStatus</parameter>
		<parameter type="String">logo</parameter>
		<parameter type="String">clogo</parameter>
		<parameter type="String">describes</parameter>
		<parameter type="String">cdescribes</parameter>
		<parameter type="short">autoAuth</parameter>
		<parameter type="short">sellAuth</parameter>
		<parameter type="short">payMethod</parameter>
		<parameter type="int">freight</parameter>
		<parameter type="int">cstyleSeq</parameter>
		<parameter type="int">styleSeq</parameter>
		<parameter type="short">special</parameter>
		<parameter type="String">topLogo</parameter>
		<parameter type="int">seq</parameter>
	</dao>
	<dao name="QueryAllSeller">
		<statement>
			select a.*,b.userId,b.username,b.roles,b.email,b.userPwd
			from seller a left join adminuser b on a.adminSeq = b.seq
		</statement>
	</dao>
	<dao name="QuerySellerByGPID">
		<statement>select * from seller where GPID=?</statement>
		<parameter type="String">GPID</parameter>
	</dao>
	<dao name="QuerySellerByAdminSeq">
		<statement>select * from seller where adminSeq=?</statement>
		<parameter type="long">adminSeq</parameter>
	</dao>
	<dao name="QuerySellerByGPID2">
		<statement>
			select * from seller where GPID=? and register=1
		</statement>
		<parameter type="String">GPID</parameter>
	</dao>
	<dao name="QuerySellerByGPID3">
		<statement>
			select * from seller where GPID=? and status=1
		</statement>
		<parameter type="String">GPID</parameter>
	</dao>
	<dao name="QuerySellerByGPIDandStatus">
		<statement><![CDATA[select * from seller where GPID=? and passCode=? and status=?]]></statement>
		<parameter type="String">GPID</parameter>
		<parameter type="String">passCode</parameter>
		<parameter type="short">status</parameter>
	</dao>
	<dao name="UpdateSellerAdminSeq">
		<statement>update seller set adminSeq=? where GPID=?</statement>
		<parameter type="int">adminSeq</parameter>
		<parameter type="String">GPID</parameter>
	</dao>
</root>

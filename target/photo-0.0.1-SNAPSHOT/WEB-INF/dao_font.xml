<?xml version="1.0" encoding="big5"?>
<root>
  <dao name="AddFont">
    <statement>insert into
      TypeImage(seq,name,exeFile,preview,facename,frontcolor,fontsize,pixel,background,format,margin) values(?,?,?,?,?,?,?,?,?,?,?)</statement>
    <parameter type="int">seq</parameter>
    <parameter type="String">name</parameter>
    <parameter type="String">exeFile</parameter>
    <parameter type="String">preview</parameter>
    <parameter type="String">facename</parameter>
    <parameter type="String">frontcolor</parameter>
    <parameter type="String">fontsize</parameter>
    <parameter type="String">pixel</parameter>
    <parameter type="String">background</parameter>
    <parameter type="String">format</parameter>
    <parameter type="String">margin</parameter>
  </dao>
  <dao name="UpdateFont">
    <statement>update TypeImage set
      name=?,exeFile=?,preview=?,facename=?,frontcolor=?,fontsize=?,pixel=?,background=?,format=?,margin=?
      where seq=?</statement>
    <parameter type="String">name</parameter>
    <parameter type="String">exeFile</parameter>
    <parameter type="String">preview</parameter>
    <parameter type="String">facename</parameter>
    <parameter type="String">frontcolor</parameter>
    <parameter type="String">fontsize</parameter>
    <parameter type="String">pixel</parameter>
    <parameter type="String">background</parameter>
    <parameter type="String">format</parameter>
    <parameter type="String">margin</parameter>
    <parameter type="int">seq</parameter>
  </dao>
  <dao name="DeleteFont">
    <statement>delete from TypeImage where seq=? and (status = 1 or status=0)</statement>
    <parameter type="int">seq</parameter>
  </dao>
  <dao name="StopFont">
    <statement>update TypeImage set status=0 where seq=? and status = 1</statement>
    <parameter type="int">seq</parameter>
  </dao>
  <dao name="StartFont">
    <statement>update TypeImage set status=1 where seq=? and status = 0</statement>
    <parameter type="int">seq</parameter>
  </dao>
  <dao name="QueryAllFont">
    <statement>select  * from TypeImage where status=1 or status = 2</statement>
  </dao>
  <dao name="QueryAllFont2">
    <statement>select  * from TypeImage where status=1</statement>
  </dao>
  <dao name="QueryAllFont3">
    <statement>select  * from TypeImage</statement>
  </dao>
  <dao name="QueryFont">
    <statement>select  * from TypeImage where seq=?</statement>
    <parameter type="int">seq</parameter>
  </dao>
  <dao name="AddFontType">
    <statement>insert into FontType(fontName,fontType,preview,status) values(?,?,?,?)</statement>
    <parameter type="String">fontName</parameter>
    <parameter type="String">fontType</parameter>
    <parameter type="String">preview</parameter>
    <parameter type="int">status</parameter>
  </dao>
  <dao name="QueryAllFontType">
    <statement>select  * from FontType order by fontName</statement>
  </dao>
  <dao name="QueryAllFontType2">
    <statement>select  * from FontType where status = 1 order by fontName</statement>
  </dao>
  <dao name="QueryFontType">
    <statement>select  * from FontType where seq = ?</statement>
    <parameter type="int">seq</parameter>
  </dao>
  <dao name="DeleteFontType">
    <statement>delete from FontType where seq=?</statement>
    <parameter type="int">seq</parameter>
  </dao>
  <dao name="StopFontType">
    <statement>update FontType set status=0 where seq=? and status = 1</statement>
    <parameter type="int">seq</parameter>
  </dao>
  <dao name="StartFontType">
    <statement>update FontType set status=1 where seq=? and status = 0</statement>
    <parameter type="int">seq</parameter>
  </dao>
  <dao name="UpdateFontType">
    <statement>update FontType set fontName=?,fontType=?,preview=?,status=? where seq=?</statement>
    <parameter type="String">fontName</parameter>
    <parameter type="String">fontType</parameter>
    <parameter type="String">preview</parameter>
    <parameter type="int">status</parameter>
    <parameter type="int">seq</parameter>
  </dao>
</root>

<?xml version="1.0" encoding="big5"?>
<root>
  <dao name="AddCalKinds">
    <statement>insert into
      cal_kinds(name,captionPic,preview,content,createDate,updateDate,status,hasSkin,prior) values(?,?,?,?,?,?,?,?,?)</statement>
    <parameter type="String">name</parameter>
    <parameter type="String">captionPic</parameter>
    <parameter type="String">preview</parameter>
    <parameter type="String">content</parameter>
    <parameter type="Timestamp">now()</parameter>
    <parameter type="Timestamp">now()</parameter>
    <parameter type="short">status</parameter>
    <parameter type="short">hasSkin</parameter>
    <parameter type="int">prior</parameter>
  </dao>
  <dao name="UpdateCalKinds">
    <statement>update cal_kinds set
      name=?,captionPic=?,preview=?,content=?,updateDate=?,status=?,hasSkin=?,prior=?
      where seq=?</statement>
    <parameter type="String">name</parameter>
    <parameter type="String">captionPic</parameter>
    <parameter type="String">preview</parameter>
    <parameter type="String">content</parameter>
    <parameter type="Timestamp">now()</parameter>
    <parameter type="short">status</parameter>
    <parameter type="short">hasSkin</parameter>
    <parameter type="int">prior</parameter>
    <parameter type="long">seq</parameter>
  </dao>
  <dao name="QueryAllCalKinds">
    <statement>select  * from cal_kinds</statement>
  </dao>
  <dao name="QueryCalKindsBySeq">
    <statement>select  * from cal_kinds where seq = ?</statement>
    <parameter type="long">seq</parameter>
  </dao>
  <dao name="QueryShowCalKinds">
    <statement>select * from cal_kinds where status= 1 order by prior</statement>
  </dao>
  <dao name="UpdateCalKindsStatus">
    <statement>update cal_kinds set status=? where seq=?</statement>
    <parameter type="short">status</parameter>
    <parameter type="long">seq</parameter>
  </dao>
  <dao name="RemoveCalKinds">
    <statement>update cal_kinds set status=0 where seq=?</statement>
    <parameter type="long">seq</parameter>
  </dao>

  <dao name="AddCalProduct">
    <statement>insert into
      cal_product(name,kinds,pageNum,pageSize,valuation,picture,content,createDate,updateDate,status,captionPic,prior)
      values(?,?,?,?,?,?,?,?,?,?,?,?)</statement>
    <parameter type="String">name</parameter>
    <parameter type="int">kinds</parameter>
    <parameter type="int">pageNum</parameter>
    <parameter type="String">pageSize</parameter>
    <parameter type="int">valuation</parameter>
    <parameter type="String">picture</parameter>
    <parameter type="String">content</parameter>
    <parameter type="Timestamp">now()</parameter>
    <parameter type="Timestamp">now()</parameter>
    <parameter type="int">status</parameter>
    <parameter type="String">captionPic</parameter>
    <parameter type="int">prior</parameter>
  </dao>
  <dao name="UpdateCalProduct">
    <statement>update cal_product set
      name=?,kinds=?,pageNum=?,pageSize=?,valuation=?,picture=?,content=?,
      updateDate=?,status=?,captionPic=?,prior=? where seq=?</statement>
    <parameter type="String">name</parameter>
    <parameter type="int">kinds</parameter>
    <parameter type="int">pageNum</parameter>
    <parameter type="String">pageSize</parameter>
    <parameter type="int">valuation</parameter>
    <parameter type="String">picture</parameter>
    <parameter type="String">content</parameter>
    <parameter type="Timestamp">now()</parameter>
    <parameter type="int">status</parameter>
    <parameter type="String">captionPic</parameter>
    <parameter type="int">prior</parameter>
    <parameter type="int">seq</parameter>
  </dao>
  <dao name="DeleteCalProduct">
    <statement>delete from cal_product where seq=?</statement>
    <parameter type="int">seq</parameter>
  </dao>
  <dao name="QueryAllCalProduct">
    <statement>select * from cal_product</statement>
  </dao>
  <dao name="QueryAllCalProduct2">
    <statement>select * from cal_product order by name</statement>
  </dao>
  <dao name="QueryCalProduct">
    <statement>select * from cal_product where seq = ?</statement>
    <parameter type="int">productSeq</parameter>
  </dao>
  <dao name="QueryCalProductByKinds">
    <statement>select * from cal_product where kinds = ? and status=1 order by prior</statement>
    <parameter type="int">kinds</parameter>
  </dao>
  <dao name="QueryCalProductByKindAndSize">
    <statement>select * from cal_product where kinds = ? and pageSize=? order by pageNum</statement>
    <parameter type="int">kinds</parameter>
    <parameter type="String">pageSize</parameter>
  </dao>
</root>
